{
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "useUnknownInCatchVariables": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}